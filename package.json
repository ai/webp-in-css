{
  "name": "webp-in-css",
  "version": "0.5.1",
  "description": "PostCSS plugin and tiny JS script (131 bytes) to use WebP in CSS background",
  "keywords": [
    "webp",
    "postcss-plugin",
    "css",
    "background",
    "polyfill"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/webp-in-css",
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci . && size-limit"
  },
  "engines": {
    "node": ">=10.0"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.1.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^40.0.1",
    "@size-limit/preset-small-lib": "^4.5.3",
    "clean-publish": "^1.1.8",
    "eslint": "^7.6.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^22.0.0",
    "husky": "^4.3.0",
    "jest": "^26.2.2",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.4.0",
    "nanodelay": "^1.0.3",
    "postcss": "^8.1.0",
    "postcss-sharec-config": "^0.1.8",
    "size-limit": "^4.5.3"
  },
  "size-limit": [
    {
      "path": "polyfill.js",
      "limit": "142 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "polyfill.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "sharec": {
    "config": "postcss-sharec-config",
    "version": "0.1.8"
  }
}
