{
  "name": "webp-in-css",
  "version": "0.7.0",
  "description": "PostCSS plugin and tiny JS script (184 bytes) to use WebP in CSS background",
  "keywords": [
    "webp",
    "postcss-plugin",
    "css",
    "background",
    "polyfill"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/webp-in-css",
  "bugs": {
    "url": "https://github.com/ai/webp-in-css/issues"
  },
  "scripts": {
    "unit": "uvu . '\\.test\\.(ts|js)$'",
    "test": "c8 yarn unit && eslint . && size-limit"
  },
  "engines": {
    "node": ">=12.0"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.2.14"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.0",
    "@size-limit/preset-small-lib": "^6.0.4",
    "c8": "^7.10.0",
    "clean-publish": "^3.4.3",
    "eslint": "^8.2.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^5.1.1",
    "nanodelay": "^1.0.8",
    "postcss": "^8.3.11",
    "size-limit": "^6.0.4",
    "uvu": "^0.5.2"
  },
  "size-limit": [
    {
      "path": "polyfill.js",
      "limit": "184 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "polyfill.js"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "clean-publish": {
    "cleanDocs": true
  }
}
