{
  "name": "webp-in-css",
  "version": "0.1.0",
  "description": "PostCSS plugin and tiny JS script (128 bytes) to use WebP in CSS background",
  "keywords": [
    "webp",
    "postcss-plugin",
    "css",
    "background",
    "polyfill"
  ],
  "scripts": {
    "spell": "yaspeller-ci *.md",
    "lint": "eslint-ci plugin.js *.test.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/webp-in-css",
  "dependencies": {
    "postcss": "^7.0.14"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.0.0",
    "clean-publish": "^1.1.2",
    "eslint": "^5.16.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest": "^24.6.0",
    "lint-staged": "^8.1.5",
    "nanodelay": "^0.1.4",
    "size-limit": "^1.0.0",
    "yaspeller-ci": "^1.0.0"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "128 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config/node"
  },
  "eslintIgnore": [
    "index.js"
  ],
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "WebP",
      "PostCSS",
      "JS",
      "WebP in",
      "Squoosh",
      "NG",
      "diff",
      "sh",
      "dev",
      "autoprefixer",
      "js",
      "npm",
      "webp",
      "Versioning",
      "webp-in"
    ]
  }
}
