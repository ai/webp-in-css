{
  "name": "webp-in-css",
  "version": "0.5.1",
  "description": "PostCSS plugin and tiny JS script (131 bytes) to use WebP in CSS background",
  "keywords": [
    "webp",
    "postcss-plugin",
    "css",
    "background",
    "polyfill"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/webp-in-css",
  "scripts": {
    "test": "jest --coverage && eslint . && size-limit"
  },
  "engines": {
    "node": ">=12.0"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "peerDependencies": {
    "postcss": "^8.2.14"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.4.1",
    "@size-limit/preset-small-lib": "^4.10.2",
    "clean-publish": "^2.2.0",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nanodelay": "^1.0.8",
    "postcss": "^8.2.14",
    "postcss-sharec-config": "^0.4.1",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.4.1",
    "size-limit": "^4.10.2"
  },
  "size-limit": [
    {
      "path": "polyfill.js",
      "limit": "142 B"
    }
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "polyfill.js"
  ],
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "sharec": {
    "config": "postcss-sharec-config",
    "version": "0.4.1"
  }
}
